@model IEnumerable<IdentityRole>
<div class="rolesPage">
    <div class="rolesHeader">

        <h2>Список ролей</h2>
        <h3>Вход ограничен ролью "supersdmin"</h3>
        <br />

        <table class="table">
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
        <a class="linkDesign" asp-action="Create">Добавить роль</a>
        <a class="linkDesign" asp-action="UserList">Список пользователей</a>

    </div>
</div>

