@model RegisterViewModel

<div class="accountPage">

    <div class="accountHeader">
       
        <h2>Регистрация нового пользователя</h2>
        <hr class="horizontal-line" /><br />

        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Email"></label><br />
                <input class="accountInput" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Year"></label><br />
                <input class="accountInput" asp-for="Year" />
                <span asp-validation-for="Year"></span>
            </div>
            <div>
                <label asp-for="Password"></label><br />
                <input class="accountInput" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="PasswordConfirm"></label><br />
                <input class="accountInput" asp-for="PasswordConfirm" />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <div>
                <input class="submitButton" type="submit" value="Регистрация" />
            </div>
        </form>

    </div>
</div>