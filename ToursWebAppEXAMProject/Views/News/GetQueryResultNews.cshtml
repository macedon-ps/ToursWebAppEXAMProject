@model IEnumerable<New>
<div class="editPage">
    
    @await Html.PartialAsync("../Edit/EditButtonMenuPartial")

    <div class="editHeader">
        
        <h3 class="title">Вход ограничен ролями "editor" и "superadmin"</h3><br />
        <hr class="horizontal-line" />

        @foreach(var item in Model)
        {
            <div>
                <div>
                    <h2>@item.Name</h2>
                </div>
                <div>
                    <h4>@item.ShortDescription</h4>
                </div>
                <div class="editDelete">
                    <a asp-controller="News" asp-action="EditNews" asp-route-id="@item.Id">редактировать</a>	
                    <a asp-controller="News" asp-action="DeleteNews" asp-route-id="@item.Id">удалить</a>
                </div>
            </div>
        }
    </div>
</div>
