@{
    ViewData["Title"] = "About Page";
}

<div class="aboutPage">
    <div class="homeButton">
        <button class="">
            <a class="" asp-area="" asp-controller="About" asp-action="">Наши реквизиты</a>
        </button>
        <button class="">
            <a class="" asp-area="" asp-controller="About" asp-action="">Режим работы</a>
        </button>
        <button class="">
            <a class="" asp-area="" asp-controller="About" asp-action="">Фотогаллерея</a>
        </button>
        <button class="">
            <a class="" asp-area="" asp-controller="About" asp-action="">Обратная связь</a>
        </button>
        <button class="">
            <a class="" asp-area="" asp-controller="About" asp-action="TechTaskAbout">ТЗ для About</a>
        </button>
    </div>
    <div class="aboutHeader">
        <h1>Информация о нас:</h1>
        <br/>
        <div class="text-center">
            <h3>Название компании:</h3>
            <p>@ConfigData.CompanyName</p>
            <h3>Электронная почта:</h3>
            <p>@ConfigData.CompanyEmail</p>
            <h3>Контактный телефон:</h3>
            <p>@ConfigData.CompanyPhone</p>
        </div>
    </div>
</div>
