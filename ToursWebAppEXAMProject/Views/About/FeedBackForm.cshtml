@model Correspondence

<div class="aboutPage">
    
    @await Html.PartialAsync("AboutButtonMenuPartial")

    <div class="aboutHeader">

        @* для CKEditor 4 *@
        <script src="~/js/ckeditor4/ckeditor.js"></script>
        
        <h2 class="title">Рады Вас приветствовать! </h2>
        <h4 class="title"> Задайте Ваш вопрос или сообщите о Вашей проблеме</h4>
        <hr class="horizontal-line" />
        <br />
        <p>Для ускорения обработки запроса, просим заполнить краткую форму. 
        <br />Гарантируем сохранность Вашей конфиденциальной информации</p>

        <form asp-controller="About" asp-action="FeedBackForm" method="post"> 
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="Answer" />
            <input type="hidden" asp-for="CustomerId" />
            
            <input type="hidden" asp-for="OfferId" />
            <input type="hidden" asp-for="Offer" />
            <input type="hidden" asp-for="QuestionDate" />
            <div>
                <div asp-validation-summary="All"></div>
                <div class="displayFlexCol">
                    <label asp-for="Customer.Name"></label>
                    <input asp-for="Customer.Name"/>
                    <span asp-validation-for="Customer.Name"></span>
                </div>
                <div class="displayFlexCol">
                    <label asp-for="Customer.Surname"></label>
                    <input asp-for="Customer.Surname"/>
                    <span asp-validation-for="Customer.Surname"></span>
                </div>
                <div class="displayFlexCol">
                    <label asp-for="Customer.BirthDay"></label>
                    <input asp-for="Customer.BirthDay" type="datetime" />
                    <span asp-validation-for="Customer.BirthDay"></span>
                </div>
                <div class="displayFlexCol">
                    <label asp-for="Customer.Gender"></label>
                    <input asp-for="Customer.Gender"/>
                    <span asp-validation-for="Customer.Gender"></span>
                </div>
                <div class="displayFlexCol">
                    <label asp-for="IsExCustomerOfCompany"></label>
                    <input asp-for="IsExCustomerOfCompany" />
                    <span asp-validation-for="IsExCustomerOfCompany"></span>
                </div>
                <div class="displayFlexCol">
                    <label asp-for="Question">Введите Ваш вопрос или пожелание:  </label>
                    <textarea asp-for="Question" name="textArea" cols="100" rows="20" ></textarea>
                    <span asp-validation-for="Question"></span>
                </div>
                <input type="submit" value="Отправить"/>
            </div>
        </form>
   </div>
</div>
<script>
    var newCKEdit = CKEDITOR.replace('textArea');
    newCKEdit.updateElement();
</script>