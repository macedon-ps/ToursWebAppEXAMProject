@model EditMenuViewModel
@{
    ViewData["Title"] = "Admin Page";
}

@{ // TODO:  необходимо сделать переход на asp-area="Admin"
   // для этого реализовать аутентификацию и авторизацию с помощью фр-ка Entity 
}
<div class="adminPage">
    
    @await Html.PartialAsync("AdminButtonMenuPartial")
    
    <div class="adminHeader">
                 
        <h1 class="title">Страница администратора сайта:</h1>
        <hr class="horizontal-line" />
        <br />
        <div>
            @{
                var keyWord = "";
                switch (@Model.type)
                {
                    case "New":
                        keyWord = "новостей";
                        break;
                    case "Blog":
                        keyWord = "блогов";
                        break;
                    case "Product":
                        keyWord = "турпродуктов";
                        break;
                }
            }
            <h2>1. Создание @keyWord:</h2>
            
            <div class="div-box">
                <form asp-area="" asp-controller="Admin" asp-action="CreateEntity" method="get">
                    <input type="hidden" asp-for="type" value="@Model.type"/>
                    <input type = "submit" value="Создать"/>
                </form>
            </div>
        
            <h2>2. Редактирование/удаление @keyWord:</h2>
            
            <div class="div-box">
                
                <h4>Выберите режим ввода:</h4>
                
                <form asp-area="" asp-controller="Admin" asp-action="GetQueryResultEntities" method="get">
                    <input type="hidden" asp-for="type" value="@Model.type"/>
                    <input type = "radio" asp-for="isFullName" value="true"/><span class="spanMarginLR">Полное название</span>
                    <input type = "radio" asp-for="isFullName" value="false"/><span class="spanMarginLR">Ключевое слово</span>
                    <div>
                        <input asp-for="fullNameOrKeywordOfItem" class="inputWidth-100" placeholder="Введите полное название / ключевое слово"/>
                    </div>
                        <input type = "submit" value="Найти"/>
                </form>
            </div>
        </div>
    </div>
</div>