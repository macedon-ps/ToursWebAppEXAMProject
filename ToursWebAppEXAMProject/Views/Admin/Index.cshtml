@model EditMenuViewModel
@{
    ViewData["Title"] = "Admin Page";
    // страница AdminController/Index.cshtml по умолчанию принимает тип New
}

@{ // TODO:  необходимо сделать переход на asp-area="Admin"
   // для этого реализовать аутентификацию и авторизацию с помощью фр-ка Entity 
}
<div class="adminPage">
    <div class="adminButton">
        <button class="">
           <a id="" asp-area="" asp-controller="Admin" asp-action="EditMenu" asp-route-type="New">Редактировать новости</a>
        </button>
        <button class="">
            <a id="" asp-area="" asp-controller="Admin" asp-action="EditMenu" asp-route-type="Blog">Редактировать блоги</a>
        </button>
        <button class="">
            <a id="" asp-area="" asp-controller="Admin" asp-action="EditMenu" asp-route-type="Product">Редактировать турпродукты</a>
        </button>
        <button class="">
           <a id="" asp-area="" asp-controller="Admin" asp-action="TechTaskAdmin">ТЗ для Admin</a>
        </button>
    </div>
    <div class="adminHeader">
                 
        <h1>Страница администратора сайта:</h1>
        <br/>
        <div>
        
            <h2>1. Создание новостей:</h2>
            
            <div class="div-box">
                <form asp-area="" asp-controller="Admin" asp-action="CreateEntityNew" method="get">
                    <input type="hidden" asp-for="type" value="New"/>
                    <input type = "submit" value="Создать"/>
                </form>
            </div>
        
            <h2>2. Редактирование/удаление новостей:</h2>
            
            <div class="div-box">
                
                <h4>Выберите режим ввода:</h4>
                
                <form asp-area="" asp-controller="Admin" asp-action="GetQueryResultEntities" method="get">
                    <input type="hidden" asp-for="type" value="New"/>
                    <input type = "radio" asp-for="isFullName" value="true"/><span class="spanMarginLR">Полное название</span>
                    <input type = "radio" asp-for="isFullName" value="false"/><span class="spanMarginLR">Ключевое слово</span>
                    <div>
                        <input asp-for="fullNameOrKeywordOfItem" class="inputWidth-100" placeholder="Введите полное название / ключевое слово"/>
                    </div>
                        <input type = "submit" value="Найти"/>
                </form>
            </div>
        </div>
    </div>
</div>