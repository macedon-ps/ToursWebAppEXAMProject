@model ModelsErrorViewModel
@{
    ViewData["Title"] = "ModelsError";
}  

<div class="errorPage">
        <div class="errorButton">
            <button class="">
                <a class="" asp-area="" asp-controller="" asp-action="">Назад</a>
             </button>
             <button class="">
                 <a class="" asp-area="" asp-controller="" asp-action="">Резерв</a>
             </button>
             <button class="">
                 <a class="" asp-area="" asp-controller="" asp-action="">Резерв 2</a>
             </button>
             <button class="">
                 <a class="" asp-area="" asp-controller="" asp-action="">Резерв 3</a>
             </button>
        </div>
        <div class="errorHeader">
            <h1>Страница вывода ошибок:</h1><br/>
            
            <h3>Сообщение об ошибке:</h3><br/>
            <p class="text-danger">@Model.ErrorMessage</p><br/>
            
            <h3>Тип данных, вызвавший ошибку: </h3><br/>
            <p class="text-danger">@Model.ModelTypeCalledError</p><br/>
            
            @{
                var requestId = Model.RequestId ?? null;
                if (Model.IsRequestId(requestId))
                {
                     <p class="text-danger">Возможно, объект с указанным id = @requestId отсутствует в БД</p>
                }
                else
                {
                     <p class="text-danger">Возможно, указанный объект отсутствует в БД</p>
                }
                    <h3>Время появления ошибки: </h3><br/>
                    <p class="text-danger">@Model.DateTimeError</p>
            }
         </div>
   </div>




