<div class="editPage">
    
    @if (Model.ToString().Contains("EditAboutPageViewModel"))
    {
        @await Html.PartialAsync("../About/AboutButtonMenuPartial")

        <div class="editHeader">

            <h3 class="title">Сохранение объекта прошло  успешно!</h3>
            <h4 class="title">Данные сохраненного объекта::</h4>
            <hr class="horizontal-line" />
            <br />
            <div>

                <div class="padding_bottom_2 displayFlex">
                    Версия страницы: v.@Model.Keyword
                </div>
                <div class="padding_bottom_2 displayFlex">
                    Id: @Model.Id
                </div>
                <div class="padding_bottom_2 displayFlex">
                    Время создания/редактирования: @Model.DateAdded
                </div>

            </div>
        </div>
    }
    @if (Model.ToString().Contains("CorrespondenceViewModel"))
    {
        @await Html.PartialAsync("../About/AboutButtonMenuPartial")

        <div class="editHeader">

            <h3 class="title">Сохранение объекта прошло  успешно!</h3>
            <h4 class="title">Данные сохраненного объекта:</h4>
            <hr class="horizontal-line" />
            <br />
            <div>

                <div class="padding_bottom_2 displayFlex">
                    Пользователь: @Model.Name  @Model.Surname 
                </div>
                <div class="padding_bottom_2 displayFlex">
                    Email: @Model.Email
                </div>
                <div class="padding_bottom_2 displayFlex">
                    Вопрос: @Model.Question
                </div>
                <div class="padding_bottom_2 displayFlex">
                    @Model.QuestionDate
                </div>

            </div>
        </div>
    }
    @if (Model.ToString().Contains("Blog") || Model.ToString().Contains("City") || Model.ToString().Contains("Country") || Model.ToString().Contains("New") || Model.ToString().Contains("Product"))
    {
        @await Html.PartialAsync("../Edit/EditButtonMenuPartial")

        <div class="editHeader">

            <h3 class="title">Сохранение объекта прошло  успешно!</h3>
            <h4 class="title">Данные сохраненного объекта:</h4>
            <hr class="horizontal-line" />
            <br />
            <div>
                <div class="displayFlexCol">
                    <h4>Название:</h4>
                    <p>@Model.Name</p>
                </div>
                @if (Model.ToString().Contains("City"))
                {
                    <div class="check-isCapital">
                        <h4>Является ли столицей:</h4>
                        <p>@Model.isCapital</p>
                    </div>
                }
                <div class="displayFlexCol">
                    <h4>Краткое описание:</h4>
                    <p>@Model.ShortDescription</p>
                </div>
                <div class="displayFlexCol">
                    <h4>Полное описание:</h4>
                    <p>@Model.FullDescription</p>
                </div>
                @if (Model.ToString().Contains("Blog"))
                {
                    <div class="displayFlexCol">
                        <h4>Все сообщения:</h4>
                        <p>@Model.FullMessageLine</p>
                    </div>
                }
                <div class="displayFlexCol">
                    <h4>Титульная картинка:</h4>
                    <p>@Model.TitleImagePath</p>
                </div>
                <div class="displayFlexCol">
                    <h4>Время создания:</h4>
                    <p>@Model.DateAdded</p>
                </div>
            </div>
        </div>
    }

    
    
</div>
