<!DOCTYPE html>
<html lang="en">
    <head>
        @await Html.PartialAsync("MetatagsPartial")
        @await Html.PartialAsync("CssPartial")
    </head>
<body>
    <div id="page-wrapper">
        <!-- TODO: Создать хедер. Пока заглушка  -->
        @await Html.PartialAsync("HeaderPartial")
        <div id="main">
			<div class="container"> <!-- class="palms"-->
				<div class="row main-row">
					<div class="col-9 col-12-medium">
                        <!-- TODO: Это шаблон для RenderBody. Пока заглушка  -->
                        <h3>Название фирмы: @ConfigData.CompanyName</h3>
                        <p>Телефон: @ConfigData.CompanyPhone</p>
                        <p>Email: <a>@ConfigData.CompanyEmail</a></p>   
                        @RenderBody()
                    </div>
                    <!-- TODO: Создать боковую часть "SidePartial". Пока заглушка  -->
                    <div class="col-3 col-12-medium">
                        @await Html.PartialAsync("SidePartial")
                    </div>
                </div>
                
            </div>
        </div>
        <!-- TODO: Создать футер. Пока заглушка  -->
        @await Html.PartialAsync("FooterPartial")
    </div>
        
    @await Html.PartialAsync("ScriptsPartial")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
