!DOCTYPE html>
<html>
<head>
    <title>Simple Marker</title>
    <!-- The callback parameter is required, so we use console.debug as a noop -->
    @{
        var url = $"https://maps.googleapis.com/maps/api/js?key={ConfigMapApi.GetMapApiKey()}";
    }
    <script async src="@url">
    </script>
    <style>
        /* Always set the map height explicitly to define the size of the div
               * element that contains the map. */
        gmp-map {
            height:100%;
        }

        /* Optional: Makes the sample page fill the window. */
        html,
        body {
            height:100%;
            margin: 0.8em;
            padding: 0.5em;
        }
    </style>
</head>
<body>

    <gmp-map center="46.64186477661133,32.632164001464844" zoom="14" map-id="DEMO_MAP_ID">
        <gmp-advanced-marker position="46.64186477661133,32.632164001464844" title="My location"></gmp-advanced-marker>
    </gmp-map>
    </body>
</html>