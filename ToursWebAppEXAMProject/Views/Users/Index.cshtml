@model IEnumerable<User>
@{
    ViewBag.Title = "Страница администратора";
}

<div class="usersPage">
    <div class="usersHeader">
        
        <h1 class="title">Редактирование списка пользователей</h1>
        <h4 class="title">Вход ограничен ролью "superadmin"</h4><br />
        <hr class="horizontal-line" /><br />

        <a class="linkDesign" asp-action="Create">Добавить пользователя</a>

        <table class="table">
            <tr><th>Email</th><th>Год</th><th>Confirmed email</th></tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.BirthYear</td>
                    <td>@user.EmailConfirmed</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                            <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                            <button type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>

    </div>
</div>

