@model Blog
@{
    ViewData["Title"] = "Home Page";
}

<div class="homePage">
    
    @await Html.PartialAsync("HomeButtonMenuPartial")

    <div class="homeHeaderOne">
        <div class="titleImage50">
            <img src="@Model.TitleImagePath" alt="@Model.TitleImagePath" align="left">
            @*<p>Расположение фото: </p>
            <h3>@Model.TitleImagePath</h3>*@
        </div>
        <div>
            <h2>@Model.Name</h2>
        </div>
        <div>
            @Html.Raw(Model.FullDescription)
        </div>
        <div class="displayFlexRow">
            <h4>Id блога: @Model.Id</h4>
            <h4>Дата: @Model.DateAdded</h4>
        </div>
        <div class="add-messages">
            <h3>Пользователь: </h3>
            <input type="text" id="textUser" value="Пользователь" placeholder="Ваше имя" class="blog-user" />
            <h3>Сообщение: </h3>
            <textarea rows="5" cols="50" id="textMessage" placeholder="Ваше сообщение" class="blog-message"></textarea>
            <button type="submit" class="" id="btnSend">Отправить</button>
        </div>
        <div>
            <h3>Все сообщения: </h3>
            <ul class="list-blog-messages" id="list-message"></ul>
        </div>
    </div>
</div>
<script src="~/lib/microsoft-signalr/signalr.js"></script>
<script src="~/js/sendmessage.js"></script>