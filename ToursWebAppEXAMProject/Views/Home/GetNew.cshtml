@model New

@{
    ViewData["Title"] = "Home Page";
}

<div class="homePage">
    <div class="homeButton">
            <button class="">
            <a class="" asp-area="" asp-controller="Home" asp-action="GetAllNews">Новости со всего мира</a>
            </button>
            <button class="">
                <a class="" asp-area="" asp-controller="Home" asp-action="GetAllBlogs">Блоги о туризме</a>
            </button>
            <button class="">
                <a class="" asp-area="" asp-controller="Home" asp-action="">Резерв</a>
            </button>
            <button class="">
                <a class="" asp-area="" asp-controller="Home" asp-action="TechTaskHome">ТЗ для Home</a>
            </button>
    </div>
    <div class="homeHeader">
        <div class="titleImage">
            <img src="@Model.TitleImagePath" alt="@Model.TitleImagePath" align="left" width="50%">
            @* Для проверки: 
            <h3>@Model.TitleImagePath</h3>*@
        </div>
        <div class="">
            <h2>@Model.Name</h2>
        </div>
        <div class="">
            @Html.Raw(Model.FullDescription)
        </div>
        <div class="displayFlexRow">
            <h4>Id новости: @Model.Id</h4>
            <h4>Дата: @Model.DateAdded</h4>
        </div>
    </div>
</div>
