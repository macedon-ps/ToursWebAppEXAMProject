<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="${basedir}\internal-nlog.txt">
 
  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>
 
  <targets>
      <target xsi:type="File" name="main" fileName="F:\Logs\${shortdate}.log"
            layout="${longdate} | ${uppercase:${level}} | ${message} | ${callsite}" />
      <target xsi:type="File" name="error" fileName="F:\Logs\errors\${shortdate}.log"
            layout="${longdate} | ${uppercase:${level}} | ${message} | ${callsite}" />      
  </targets>
  
  <!-- rules to map from logger name to target -->
  <rules>
      <logger name="*" maxlevel="Warn" writeTo="main" />
      <logger name="*" minlevel="Error" writeTo="error" />
  </rules>

</nlog>